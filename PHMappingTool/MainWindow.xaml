<Window x:Class="PHMappingTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PHMappingTool"
        mc:Ignorable="d"
        Title="PHMappingTool" Height="450" Width="490.44">
    <Window.DataContext>
        <local:MainWindowsViewModel/>
    </Window.DataContext>
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="39" Margin="51,118,0,0" TextWrapping="Wrap" Text="{Binding Path=XMLPath}" VerticalAlignment="Top" Width="259" />
        <Button x:Name="buttonXMLPath" Content="..." HorizontalAlignment="Left" Height="39" Margin="363,118,0,0" VerticalAlignment="Top" Width="70" Command="{Binding OpenPathDialog}" RenderTransformOrigin="0.363,-2.456"/>
        <Button x:Name="buttonCalculateMapping" Content="Calculate mapping file" HorizontalAlignment="Left" Height="40" Margin="136,286,0,0" VerticalAlignment="Top" Width="174" Command="{Binding CalculateMappingFile}"/>

    </Grid>
</Window>
